# Required
GAMEVAULT_SECRET_KEY=change-me-to-a-random-string

# Public URL (used for share links)
GAMEVAULT_BASE_URL=http://localhost:8080

# Data paths (defaults work for Docker)
GAMEVAULT_DATA_DIR=/data
GAMEVAULT_LIBRARY_DIR=/data/library
GAMEVAULT_DB_PATH=/data/gamevault.db

# Authentication (set to true to disable auth for LAN-only setups)
GAMEVAULT_DISABLE_AUTH=false

# Optional: Steam Web API key (enhances game metadata)
GAMEVAULT_STEAM_API_KEY=

# Optional: SteamGridDB API key (better cover art)
GAMEVAULT_STEAMGRIDDB_API_KEY=

# Optional: IGDB/Twitch credentials (fallback metadata for non-Steam games)
GAMEVAULT_IGDB_CLIENT_ID=
GAMEVAULT_IGDB_CLIENT_SECRET=

# Import settings
GAMEVAULT_IMPORT_RATE_LIMIT_MS=1000

# Image processing
GAMEVAULT_THUMBNAIL_QUALITY=85
GAMEVAULT_MAX_UPLOAD_SIZE_MB=50

# Auth token expiry
GAMEVAULT_TOKEN_EXPIRY_DAYS=30

# Timezone
TZ=UTC
